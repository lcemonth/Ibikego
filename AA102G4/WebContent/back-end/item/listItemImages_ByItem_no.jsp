	<body>
	<%-- 錯誤表列 --%>
	<c:if test="${not empty errorMsgs}">
		<font color='red'>請修正以下錯誤:
		<ul>
			<c:forEach var="message" items="${errorMsgs}">
				<li>${message}</li>
			</c:forEach>
		</ul>
		</font>
	</c:if>
		<!-- <div class="container"> -->
		
		<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
		<table class="table table-hover table-bordered table-condensed" style="width:100px" align='center'><!-- table-striped影響顯示 -->
			<c:forEach var="itemImageVO" items="${listItemImages_ByItem_no}" >
			<td>
				<img src="<%=request.getContextPath()%>/getPostersServelt?item_img_no=${itemImageVO.item_img_no}" width="100px" height="100px" class="img-rounded">
			</td>
			</c:forEach>
		</table>
		</div>
		</div>
	<!-- </div> -->
	
		<!-- jQuery -->
		<script src="//code.jquery.com/jquery.js"></script>
		<!-- Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
